<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.fragments.register.EnterCodeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enter_code_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin_20dp"
            android:text="@string/entercode_enterphone_text"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/register_input_code"
            app:layout_constraintEnd_toEndOf="@+id/register_input_code"
            app:layout_constraintStart_toStartOf="@+id/register_input_code" />

        <EditText
            android:id="@+id/register_input_code"
            style="@style/register_edit_text_style"
            android:hint="@string/input_code"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/input_code_resent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_margin_20dp"
            android:layout_marginTop="@dimen/app_margin"
            android:text="@string/didn_t_recive_sms_text"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintStart_toStartOf="@id/register_input_code"
            app:layout_constraintTop_toBottomOf="@id/register_input_code" />

        <TextView
            android:id="@+id/input_code_resend_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin"
            android:text="@string/resend_code_text"
            android:textColor="@color/white"

            android:textSize="@dimen/large_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/input_code_resent_text"
            app:layout_constraintStart_toEndOf="@id/input_code_resent_text"
            app:layout_constraintTop_toTopOf="@+id/input_code_resent_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enter_name_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin_20dp"
            android:text="@string/register_enter_name"
            app:layout_constraintBottom_toTopOf="@+id/register_input_name"
            app:layout_constraintEnd_toEndOf="@+id/register_input_name"
            app:layout_constraintStart_toStartOf="@+id/register_input_name" />

        <EditText
            android:id="@+id/register_input_name"
            style="@style/register_inputName_style"
            android:hint="@string/register_input_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/enter_name_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin_20dp"
            android:src="@drawable/next_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>