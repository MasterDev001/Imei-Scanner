<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.settings.ChangeUserNameFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_name"
        style="@style/card_style"
        android:layout_marginTop="@dimen/top_margin_20dp"
        android:background="@drawable/stroke_cardview"
        app:cardCornerRadius="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/phone_info_info_tv_style"
                android:text="@string/username_text" />

            <EditText
                android:id="@+id/st_change_username_input"
                style="@style/phone_info_tv_style"
                android:background="@null"
                android:hint="@string/name" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
