<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_text_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_text_mobileApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_text_mobileApp"
        android:textColor="@color/colorTextBlue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_text_appName" />

    <EditText
        android:id="@+id/register_input_phone_number"
        android:hint="@string/register_text_phoneNumber"
        android:textColorHint="@color/colorTextBlue"
        android:gravity="center"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="@dimen/register_input_phone_number_width"
        android:layout_height="@dimen/register_input_phone_number_height"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_text_mobileApp" />

</androidx.constraintlayout.widget.ConstraintLayout>