<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="register_edit_text_style">
        <item name="maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/top_margin_20dp</item>
        <item name="android:inputType">phone</item>
        <item name="android:textColorHint">#8A72787A</item>
        <item name="android:layout_marginBottom">@dimen/margin_10_dp</item>
        <item name="android:textSize">@dimen/register_input_phoneNumber_text_size</item>
        <item name="android:layout_width">@dimen/register_input_phone_number_width</item>
        <item name="android:layout_height">@dimen/register_input_phone_number_height</item>
    </style>
    <style name="register_inputName_style">
        <item name="maxLines">1</item>
        <item name="android:textColorHint">#8A72787A</item>
        <item name="android:gravity">start</item>

        <item name="android:textSize">@dimen/register_input_phoneNumber_text_size</item>
        <item name="android:layout_width">@dimen/register_input_phone_number_width</item>
        <item name="android:layout_height">@dimen/register_input_phone_number_height</item>
    </style>

    <style name="register_btn_sign_style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">157dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">@dimen/top_margin_20dp</item>
    </style>

    <style name="register_google_icon_style">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">@dimen/register_google_icon_width</item>
        <item name="android:layout_height">@dimen/register_google_icon_height</item>
        <item name="android:layout_marginTop">@dimen/register_or_margin_5dp</item>
    </style>

    <style name="register_or_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/register_or_margin_5dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/register_input_phoneNumber_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settings_log_out_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_log_out_image_style">
        <item name="android:layout_width">@dimen/settings_log_out_image_width</item>
        <item name="android:layout_height">@dimen/settings_log_out_image_height</item>
        <item name="android:layout_marginStart">@dimen/top_margin_20dp</item>
    </style>

    <style name="style_top_back_btn">
        <item name="android:layout_marginTop">@dimen/app_margin</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
    </style>

    <style name="text_imei_scanner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_middle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/karla_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_10_dp</item>
    </style>

    <style name="text_button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="text_or">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="container_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/margin_10_dp</item>
    </style>

    <style name="mid_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">16</item>
        <item name="android:fontFamily">@font/karla_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="card_view_main_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">350dp</item>
        <item name="android:layout_marginStart">@dimen/top_margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/top_margin_20dp</item>
    </style>

    <style name="editext_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/top_margin_20dp</item>
    </style>

    <style name="edittext_icon_qr_code">
        <item name="android:layout_width">@dimen/_18sdp</item>
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="phone_info_tv_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_10_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/register_or_margin_5dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_10_dp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:padding">@dimen/register_or_margin_5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="phone_info_info_tv_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_10_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_10_dp</item>
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="mini_card_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>
</resources>